<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.arsalankhan.websolutionseo.NavigtionViewItems.Market_summary_activity">


    <include layout="@layout/app_bar"
        android:id="@+id/market_summary_app_bar"/>

    <WebView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/market_summary_webView"
        android:layout_below="@id/market_summary_app_bar"
        android:visibility="gone">

    </WebView>

    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:id="@+id/page_progress"
       />

    <com.google.android.gms.ads.AdView
        xmlns:ads="http://schemas.android.com/apk/res-auto"
        android:id="@+id/market_summary_adView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        ads:adSize="SMART_BANNER"
        ads:adUnitId="@string/banner_unit_id"
        android:layout_marginBottom="2dp"
        android:layout_alignParentBottom="true"
        >
    </com.google.android.gms.ads.AdView>
</RelativeLayout>
