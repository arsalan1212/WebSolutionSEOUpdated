<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/background_color"
    tools:context="com.example.arsalankhan.websolutionseo.SingleVideoActivity">



    <com.google.android.youtube.player.YouTubePlayerView
        android:id="@+id/youtubeplayerView"
        android:layout_width="match_parent"
        android:layout_height="190dp">
    </com.google.android.youtube.player.YouTubePlayerView>
    <TextView
        android:id="@+id/singleVideoTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="5dp"
        android:text="Video Title"
        android:textColor="?android:attr/textColorPrimaryDisableOnly"
        android:textSize="18sp"
        android:layout_below="@id/youtubeplayerView"/>

    <LinearLayout
        android:id="@+id/allViewParentLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/singleVideoTitle"
        android:orientation="vertical"
        >
        <!-- For likes, dislikes and total views layout-->
        <LinearLayout
            android:id="@+id/layout_singleVideoAllViews"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/singleVideoTitle"
            android:orientation="vertical"

            >
            <LinearLayout
                android:id="@+id/layout_comments"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/singleVideoTitle"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="4dp"
                android:orientation="horizontal"
                android:paddingBottom="5dp">

                <TextView
                    android:id="@+id/videoViews"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="3404 views"
                    android:textSize="15sp"
                    android:layout_weight="2"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/thumb_up" />

                    <TextView
                        android:id="@+id/tv_likes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="30M"
                        android:gravity="center"/>
                </LinearLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="60dp"
                    android:layout_gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/thumb_down" />

                    <TextView
                        android:id="@+id/tv_unlikes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="30M"
                        android:gravity="center"/>
                </LinearLayout>

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E2E2E2"
               />
            />
            <com.google.android.gms.ads.AdView
                xmlns:ads="http://schemas.android.com/apk/res-auto"
                android:id="@+id/singleVideo_adView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                ads:adSize="SMART_BANNER"
                ads:adUnitId="ca-app-pub-3940256099942544/6300978111"
                android:layout_marginBottom="1dp"
                >
            </com.google.android.gms.ads.AdView>
            <ProgressBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:id="@+id/commentsSection_progress"/>
        </LinearLayout>


    </LinearLayout>


    <!-- Chat Layout -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/allViewParentLayout"
        android:id="@+id/layout_chat"
        android:layout_marginTop="8dp"

        >
        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/chatRecyclerView"
            android:layout_above="@+id/layout_chat_input"
            android:layout_marginBottom="10dp">
        </android.support.v7.widget.RecyclerView>


        <!-- Layout for chat input and type indicator-->
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/layout_chat_input"
    android:orientation="vertical"
    android:layout_alignParentBottom="true"
    >

    <!-- For type indicator textview along with indicator-->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:paddingLeft="8dp"
        android:paddingRight="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/type_indicator_bg"
       android:gravity="center"
        android:id="@+id/layout_type_indicator"
        android:visibility="gone"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SomeOne is typing"/>
        <com.wang.avi.AVLoadingIndicatorView
            android:id="@+id/avi"
            style="@style/AVLoadingIndicatorView"
            android:layout_width="30dp"
            android:layout_height="20dp"
            android:visibility="visible"
            app:indicatorColor="#FF4f4f4f"
            app:indicatorName="BallBeatIndicator"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="4dp"


            />
    </LinearLayout>


    <!-- Chat input Layout -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="10"
            android:background="#ffffff"
            android:paddingRight="5dp"
            android:paddingLeft="5dp"
            >


            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/ChateditText"
                android:layout_weight="9"
                android:hint="@string/enter_your_message"
                android:singleLine="true"
                android:imeOptions="actionDone"
                android:background="@drawable/edittext_background_style"
                android:padding="10dp"/>

            <ImageButton
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_send"
                android:layout_weight="1"
                android:id="@+id/chat_sendBtn"
                android:background="#fff"
                android:layout_gravity="center"
                android:onClick="chatSendButton"
                android:padding="10dp"
                />

        </LinearLayout>
</LinearLayout>
    </RelativeLayout>




</RelativeLayout>
